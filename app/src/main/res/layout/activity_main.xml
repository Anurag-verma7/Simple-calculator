<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:layout_editor_absoluteX="-43dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/txtcalulations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F7FB"
        android:paddingLeft="10dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FAF6F6"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtcalulations">

        <TextView
            android:id="@+id/txtresults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:text="0"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FDFDFD"
                app:srcCompat="@drawable/seven" />

            <ImageButton
                android:id="@+id/btn8"
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FBFBFB"
                app:srcCompat="@drawable/eight" />

            <ImageButton
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#F1F0F0"
                app:srcCompat="@drawable/nine" />

            <ImageView
                android:id="@+id/btnplus"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/plus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn4"
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/four" />

            <ImageButton
                android:id="@+id/btn5"
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/five" />

            <ImageButton
                android:id="@+id/btn6"
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/six" />

            <ImageView
                android:id="@+id/btnminus"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/subtract" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn3"
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/three" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/two" />

            <ImageButton
                android:id="@+id/btn1"
                android:layout_width="20dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/one" />

            <ImageView
                android:id="@+id/btnmultiply"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/multiply" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnclear"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#FFFFFF"
                android:text="c"
                android:textSize="50sp" />

            <ImageButton
                android:id="@+id/btnzero"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/zero" />

            <ImageView
                android:id="@+id/btndivide"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/divide" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnequal"
        android:layout_width="71dp"
        android:layout_height="42dp"
        android:background="#E8E3E3"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/equal" />

</androidx.constraintlayout.widget.ConstraintLayout>